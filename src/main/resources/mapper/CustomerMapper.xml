<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dgz.springboot15.mapper.CustomerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dgz.springboot15.entity.Customer">
        <id column="customer_id" property="customerId" />
        <result column="customer_name" property="customerName" />
        <result column="customer_sex" property="customerSex" />
        <result column="customer_age" property="customerAge" />
        <result column="customer_phone" property="customerPhone" />
        <result column="customer_company" property="customerCompany" />
        <result column="customer_address" property="customerAddress" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_del" property="isDel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        customer_id, customer_name, customer_sex, customer_age, customer_phone, customer_company, customer_address, create_time, update_time, is_del
    </sql>

</mapper>
